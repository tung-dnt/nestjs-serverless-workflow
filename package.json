{
  "name": "nestjs-serverless-workflow",
  "version": "0.0.7",
  "private": false,
  "description": "Workflow and State Machines for NestJS",
  "license": "MIT",
  "author": "Thomas Do (tung-dnt)",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/core/index.js",
  "types": "./dist/core/index.d.ts",
  "exports": {
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "default": "./dist/core/index.js"
    },
    "./event-bus": {
      "types": "./dist/event-bus/index.d.ts",
      "import": "./dist/event-bus/index.js",
      "default": "./dist/event-bus/index.js"
    },
    "./exception": {
      "types": "./dist/exception/index.d.ts",
      "import": "./dist/exception/index.js",
      "default": "./dist/exception/index.js"
    },
    "./adapter": {
      "types": "./dist/adapter/index.d.ts",
      "import": "./dist/adapter/index.js",
      "default": "./dist/adapter/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "NODE_ENV=production bun run scripts/build.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "bun --inspect-brk --runInBand",
    "test:e2e": "bun test ./tests/app.e2e-spec.ts",
    "test:all": "bun run scripts/test.ts",
    "deps": "bun run scripts/install.ts",
    "typecheck": "tsgo --noEmit",
    "typecheck:all": "bun run scripts/typecheck.ts",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/testing": "^11.1.3",
    "@types/aws-lambda": "^8.10.159",
    "@types/bun": "^1.3.4",
    "@typescript/native-preview": "^7.0.0-dev.20251213.1",
    "del-cli": "^6.0.0",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "typesVersions": {
    "*": {
      "core": [
        "./dist/core/index.d.ts"
      ],
      "event-bus": [
        "./dist/event-bus/index.d.ts"
      ],
      "exception": [
        "./dist/exception/index.d.ts"
      ],
      "adapter": [
        "./dist/adapter/index.d.ts"
      ]
    }
  },
  "_moduleAliases": {
    "@/*": "*"
  },
  "engines": {
    "bun": ">=1.3.4",
    "node": ">=20.0.0"
  },
  "keywords": [
    "nestjs",
    "workflow",
    "state-machine",
    "fsm",
    "finite-state-machine",
    "typescript",
    "event-driven",
    "process-automation",
    "business-process",
    "workflow-engine",
    "state-management",
    "transition",
    "nodejs",
    "serverless",
    "orchestration",
    "lambda",
    "tree-shakable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tung-dnt/nestjs-serverless-workflow"
  },
  "bugs": {
    "url": "https://github.com/tung-dnt/nestjs-serverless-workflow/issues"
  },
  "homepage": "https://github.com/tung-dnt/nestjs-serverless-workflow#readme"
}
