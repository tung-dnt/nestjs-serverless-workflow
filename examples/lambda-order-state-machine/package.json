{
  "name": "lambda-order-state-machine",
  "version": "1.0.0",
  "author": "Thomas Do (tung-dnt)",
  "license": "MIT",
  "description": "Complete AWS Lambda example using nestjs-serverless-workflow with SQS and DynamoDB",
  "type": "module",
  "main": "dist/lambda.js",
  "scripts": {
    "build": "NODE_ENV=production bun run scripts/build.ts",
    "deploy": "bun run build && serverless deploy",
    "deploy:dev": "bun run build && serverless deploy --stage dev",
    "deploy:prod": "bun run build && serverless deploy --stage prod",
    "remove": "serverless remove",
    "logs": "serverless logs -f order-queue-worker -t",
    "invoke": "serverless invoke -f order-queue-worker",
    "start": "bun run src/main.ts",
    "start:dev": "bun --hot src/main.ts",
    "test": "echo \"No tests yet\"",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "nestjs-serverless-workflow": "file:../..",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.0.1",
    "@aws-sdk/client-dynamodb": "^3.896.0",
    "@aws-sdk/lib-dynamodb": "^3.896.0",
    "@aws-sdk/client-sqs": "^3.893.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dynamodb-toolbox": "^2.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/bun": "^1.3.4",
    "@typescript/native-preview": "^7.0.0-dev.20251213.1",
    "serverless": "^4.4.0",
    "serverless-lift": "latest",
    "serverless-plugin-include-dependencies": "^6.1.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.4"
  },
  "keywords": [
    "nestjs",
    "serverless",
    "workflow",
    "state-machine",
    "lambda",
    "sqs",
    "dynamodb",
    "aws"
  ]
}
