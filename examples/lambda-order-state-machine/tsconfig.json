{
  "compilerOptions": {
    // Target environment
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",

    // Enable compilation
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,

    // NestJS decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Module system
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    // Disabled for flexibility
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path mapping
    "paths": {
      "*": ["./*"],
      "@/*": ["../../packages/*"],
      "nestjs-serverless-workflow/workflow": ["../../packages/workflow/index.ts"],
      "nestjs-serverless-workflow/core": ["../../packages/workflow/index.ts"],
      "nestjs-serverless-workflow/event-bus": ["../../packages/event-bus/index.ts"],
      "nestjs-serverless-workflow/adapter": ["../../packages/adapter/index.ts"],
      "nestjs-serverless-workflow/exception": ["../../packages/exception/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
